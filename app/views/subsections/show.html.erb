<div id="subsections" >

  <h2><%= @subsection.name %></h2>
  <%= simple_format( @subsection.description ) %>

  <ul>
    <li><%= link_to 'Edit Subsection', edit_section_subsection_path(@section, @subsection) %></li>
    <li><%= link_to "Delete Subsection", [@group, @section, @subsection], method: :delete,
                    data: {confirm: 'Are you sure you want to delete this Subsection?'} %></li>
    <li><%= link_to 'New Breed', new_subsection_breed_path(@subsection) %></li>
    <li><%= link_to 'Standards and nomenclature page', groups_path %></li>
  </ul>

  <table id="breeds">
    <tr>
      <th>Breed</th>
    </tr>
    <% @subsection.breeds.each do |breed| %>
        <tr>
          <td><%= link_to breed.name, [@subsection, breed] %></td>
        </tr>
    <% end %>
  </table>

</div>