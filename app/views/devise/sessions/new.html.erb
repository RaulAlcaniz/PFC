<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div id="singinpanel" class="row login_box">
        <div class="col-md-6 col-xs-6" align="center">
          <div class="line"><h3><%= Date.today %></h3></div>
          <div class="outter"><%= image_tag "eye.jpg", class:"image-circle"%></div>
          <h1 class="sign-in-hi">Hi Guest</h1>
        </div>

        <div class="col-md-6 col-xs-6 login_control">
          <div id="overhidden" class="control">
            <div class="label-signin"><%= f.label :email, 'Email Address' %></div>
            <%= f.email_field :email, {autofocus: true, class:"form-control-signin"} %>
          </div>

          <div id="overhidden" class="control">
            <div class="label-signin"><%= f.label :password %></div>
            <%= f.password_field :password, {autocomplete: "off", class:'form-control-signin'} %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div id="overhidden" class="control"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <div id="overhidden" align="center">
            <button class="btn btn-orange">Sign in</button>
          </div>
          <%= render "devise/shared/links" %>
        </div>

      </div>
      <% end %>

</div>