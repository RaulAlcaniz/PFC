<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading orange">
          <h3 class="panel-title center"><b>Forgot your password?</b></h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>              <%= devise_error_messages! %>
              <form role="form">
                <label>Email</label>
                <div class="form-group">
                  <%= f.email_field :email, {autofocus: true, id:'email', class:'form-control input', placeholder:"Email Address"} %>
                </div>

                <div class="col-md-offset-3 col-xs-offset-3 col-sm-offset-3 col-xs-6 col-sm-6 col-md-6 center">
                  <%= f.submit "Send me reset password", class:"btn orange btn-block"%>
                </div>
              </form>
          <% end %>
          <div class="col-xs-12 col-sm-12 col-md-12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
