<div id="people">

  <h2>Profile <%= @person.name %></h2>

  <% sex = 'Sex: ' + @person.sex %>
  <% country = 'Country: ' + @person.country %>
  <% birth = 'Date of birth: ' + @person.date_of_birth.strftime('%d/%m/%Y') %>

  <%= simple_format( birth ) %>
  <%= simple_format( sex ) %>
  <%= simple_format( country ) %>

  <ul>
    <li><%= link_to 'Add a dog', new_person_dog_path(@person) %></li>
    <li><%= link_to 'My dogs', person_dogs_path(@person) %></li>
    <li><%= link_to 'My enrolments', exhibitions_path %></li>
    <li><%= link_to 'My exhibitions', people_my_exhibitions_path(@person) %></li>
    <li><%= link_to 'Edit person', edit_person_path(@person) %></li>
    <li><%= link_to 'Delete person', @person, method: :delete, data: {confirm: 'Are you sure you want to delete this person'} %></li>
    <li><%= link_to 'Standards and nomenclature page', groups_path %></li>
  </ul>

</div>

<% if User.find(current_user).admin? %>
    <div id="admin_people">
      <ul>
        <li><%= link_to 'Add a dog', new_person_dog_path(@person) %></li>
        <li><%= link_to 'View dogs', person_dogs_path(@person) %></li>
        <li><%= link_to 'View enrolments', exhibitions_path(user: @person) %></li>
        <li><%= link_to 'View exhibitions', people_my_exhibitions_path(@person) %></li>
        <li><%= link_to 'Edit person', edit_person_path(@person) %></li>
        <li><%= link_to 'Delete person', @person, method: :delete, data: {confirm: 'Are you sure you want to delete this person'} %></li>
      </ul>
    </div>
<% end %>