<h1>People page</h1>

<li><%= link_to 'New Person', new_person_path %></li>


<table id="people">
  <tr>
    <th>Name</th>
    <th>Date of birth</th>
    <th>Sex</th>
    <th>Country</th>

  </tr>
  <% @people.each do |person| %>
      <%# if User.where(id: person.user_id, admin: false, confirmation_token: nil).exists? %>
          <tr>
            <td><%= link_to person.name, person_path(person) %></td>
            <td><%= person.date_of_birth.strftime('%d/%m/%Y') %></td>
            <td><%= person.sex %></td>
            <td><%= person.country %></td>
          </tr>
      <%# end %>
  <% end %>

</table>