<div id="varieties" class="row" >

  <div class="col-md-12">
    <h2 class="exh-title"><strong><%= @variety.name %></strong><hr></h2>
  </div>

  <% admins_only do%>
    <div class="col-md-12">
      <div class="admin_actions right">
        <ul class="breadcrumb">
          <li><%= link_to 'Edit Variety', edit_breed_variety_path(@breed, @variety) %></li>
          <li><%= link_to 'New Subvariety', new_variety_subvariety_path(@variety, @subvariety) %></li>
        </ul>
      </div>

      <div class="admin_actions left">
        <%= link_to "Delete Variety", [@breed, @variety], method: :delete,
                    data: {confirm: 'Are you sure you want to delete this Variety?'}, :class => 'btn danger' %>
      </div>
    </div>
  <% end %>

  <% if@variety.subvarieties.any? %>
      <div class="col-md-12">
        <table id="subvarieties" class="table table-striped table-hover table-condensed">
          <tr>
            <th>Subvarities</th>
          </tr>
          <% @variety.subvarieties.order('name ASC').each do |subvariety| %>
              <tr>
                <td><%= link_to subvariety.name, [@variety, subvariety] %></td>
              </tr>
          <% end %>
        </table>
      </div>
  <% end %>
</div>