<div id="enrolments" >

  <h2> Enrolled dogs for <%= @exhibition.name %></h2>
  <table id="enrolments">
    <tr>
      <th>Id</th>
      <th>Dogs</th>
      <th>Class</th>
      <th>Price</th>
    </tr>
    <% @enrolments.each do |enrolment| %>
        <tr>
          <td><%= enrolment.id %></td>
          <td><%= Dog.find(enrolment.dog_id).name %></td>
          <td><%= enrolment.dog_class %></td>
          <td><%= number_with_precision(enrolment.price, :precision => 2) %> €</td>
          <td><%= link_to 'Remove', [@exhibition, enrolment], method: :delete, data: {confirm: 'Are you sure you want to delete this dog'} %></td>
        </tr>
    <% end %>
    <td></td>
    <tr>
      <td colspan="3"></td>
      <td><%= number_with_precision(@enrolments_price, :precision => 2) %> €</td>
      <td>TOTAL</td>
    </tr>
  </table>

    <%=button_tag(type: 'button') do
        content_tag(:strong, 'Ask me!')
    end%>
</div>