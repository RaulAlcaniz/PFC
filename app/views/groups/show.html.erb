<h1>Groups#show</h1>
<p>Find me in app/views/groups/show.html.erb</p>

<ul>
  <li><%= link_to 'Edit group', edit_group_path(@group) %></li>
  <li><%= link_to 'Delete group', @group, method: :delete, data: {confirm: 'Are you sure you want to delete this group'} %></li>
  <li><%= link_to 'Add section', '#' %></li>
</ul>


<table id="sections">
  <tr>
    <th>Section number</th>
    <th>Description</th>
  </tr>
  <% @group.sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.description %></td>
      </tr>
  <% end %>
</table>