<div id="groups" >

  <h2><%= @group.name %></h2>
  <%= simple_format( @group.description ) %>

  <ul>
    <% admins_only do%>
        <li><%= link_to 'Edit group', edit_group_path(@group) %></li>
        <li><%= link_to 'Delete group', @group, method: :delete, data: {confirm: 'Are you sure you want to delete this Group'} %></li>
        <li><%= link_to 'New Section', new_group_section_path(@group) %></li>
    <% end %>
    <li><%= link_to 'Standards and nomenclature page', groups_path %></li>
  </ul>


  <table id="sections">
    <tr>
      <th>Section number</th>
      <th>Description</th>
    </tr>
    <% @group.sections.each do |section| %>
        <tr>
          <td><%= section.name %></td>
          <td><%= link_to section.description, [@group, section] %></td>
        </tr>
    <% end %>
  </table>
</div>