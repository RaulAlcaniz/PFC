<h1>Standars and Nomenclature Page</h1>
<p>Find me in app/views/groups/index.html.erb</p>

<ul>
  <li><%= link_to 'New Group', new_group_path %></li>
</ul>

<table id="groups">
  <tr>
    <th>GROUP ID</th>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @groups.each do |group| %>
      <tr>
        <td><%= group.id %></td>
        <td><%= link_to group.name, group_path(group) %></td>
        <td><%= group.description %></td>
      </tr>
  <% end %>

</table>