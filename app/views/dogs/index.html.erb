<div class="row">
  <div class="col-md-12">
    <h2 class="titles"><strong>List of Dogs</strong></h2>
    <h4 class="titles small"> <%= @person.name %> <hr></h4>
  </div>

  <div class="col-md-12">
    <div class="col-md-offset-1 col-md-4">
      <table id="dogs" class="table table-striped table-hover table-condensed">
        <tr>
          <th>Dogs</th>
        </tr>
        <% @dogs.each do |dog| %>
            <tr>
              <td><%= link_to dog.name, person_dog_path(@person,dog) %></td>
            </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-offset-1 col-md-4">
      <%= image_tag('dog-hand.jpg', alt: 'Dog and Hand', id:'dog_hand') %>
    </div>
  </div>
</div>