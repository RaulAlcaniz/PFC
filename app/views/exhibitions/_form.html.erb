<%= form_for @exhibition do |f|%>
    <% @exhibition.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
    <% end %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area(:description, cols: 60, rows: 10, placeholder: 'Compose a description for the exhibition...') %>
    </p>

    <p>
      <%= f.label :start_date %>
      <%= f.datetime_select :start_date, start_year: Date.current.year %>
    </p>

    <p>
      <%= f.label :end_date %>
      <%= f.datetime_select :end_date, start_year: Date.current.year %>
    </p>

    <%= f.submit %>
<% end %>